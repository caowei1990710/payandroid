    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启服务" />


        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止收录"></Button>


        <Button
            android:id="@+id/bulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="补录" />

        <Button
            android:id="@+id/playbulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户补录" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:visibility="gone" />

        <Button
            android:id="@+id/receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"></Button>

        <Button
            android:id="@+id/bankreceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农业银行"></Button>

        <Button
            android:id="@+id/CEB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光大银行"></Button>

        <Button
            android:id="@+id/PSBC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮政银行"></Button>

        <Button
            android:id="@+id/checkimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查图片"
            android:visibility="gone"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="0dp">
        <Button
            android:id="@+id/CS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长沙银行"></Button>
        <Button
            android:id="@+id/NX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农信银行"></Button>
        <Button
            android:id="@+id/root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="root测试" />

        <Button
            android:id="@+id/hongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="20dp">
        <Button
            android:id="@+id/BOC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国银行"></Button>
